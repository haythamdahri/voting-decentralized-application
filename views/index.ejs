<div class="row">
    <% candidates.forEach((candidate) => { %>
    <div class="col-12 mt-4 mb-2">
        <div class="card">
            <h5 class="card-header"><i class="far fa-id-badge"></i> <%= candidate.candidateName %></h5>
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-flag"></i> Nombre des votes re√ßus</h5>
                <p class="card-text">
                    <h3>
                        <i class="fas fa-sort-numeric-up"></i>
                        <small class="text-muted"><%= candidate.votesCount %> votes</small>
                    </h3>
                </p>
                <form action="/vote" method="POST">
                    <input type="hidden" name="candidate" value="<%= candidate.candidateName %>" />
                    <button class="btn btn-primary bt-sm"><i class="fas fa-person-booth"></i> Voter</button>
                </form>
            </div>
        </div>
    </div>
    <% }); %>
</div>